<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Тайтлы">
                <ListView x:Name="AnimeListView">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Картинка" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding ImageUrl}" Width="100" Height="100"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" Width="200"/>
                            <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}" Width="400"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Плеер">
                <!-- Плеер будет добавлен позже -->
            </TabItem>
            <TabItem Header="Вход">
                <!-- Окно входа будет добавлено позже -->
            </TabItem>
            <TabItem Header="Избранные">
                <!-- Избранные будут добавлены позже -->
            </TabItem>
        </TabControl>
    </Grid>
</Window>
