<Window x:Class="AnimeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AnimeApp" Height="600" Width="800" Background="#5c0095">
    <Window.Resources>
        <!-- Styles for buttons and text -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3eb489"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl Background="#5c0095">
            <TabItem Header="Тайтлы">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListView Name="AnimeListView" SelectionChanged="AnimeListView_SelectionChanged" Grid.Column="0" Grid.RowSpan="3" Background="#5c0095" Foreground="White">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding Image}" Width="100" Height="150"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Title}" Width="200"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="10">
                        <TextBlock Name="AnimeTitle" FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
                        <Image Name="AnimeImage" Width="200" Height="300" HorizontalAlignment="Center" Margin="10"/>
                        <TextBlock Name="AnimeDescription" TextWrapping="Wrap" Margin="10"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="10">
                        <TextBlock Text="Эпизоды:" FontSize="18" FontWeight="Bold" Margin="10"/>
                        <ListBox Name="EpisodesListBox" DisplayMemberPath="Title" SelectionChanged="EpisodesListBox_SelectionChanged" Background="#5c0095" Foreground="White"/>
                        <MediaElement Name="AnimePlayer" LoadedBehavior="Manual" UnloadedBehavior="Stop" Width="400" Height="300" Margin="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="2" Margin="10">
                        <Button Content="Предыдущая" Click="PreviousPage_Click" Margin="5" Style="{StaticResource ButtonStyle}"/>
                        <Button Content="Следующая" Click="NextPage_Click" Margin="5" Style="{StaticResource ButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Плеер">
                <Grid Background="#5c0095">
                    <MediaElement Name="AnimePlayerFull" LoadedBehavior="Manual" UnloadedBehavior="Stop" Width="750" Height="450" Margin="10"/>
                </Grid>
            </TabItem>
            <TabItem Header="Вход">
                <Grid Background="#5c0095">
                    <!-- Login window to be added later -->
                </Grid>
            </TabItem>
            <TabItem Header="Избранные">
                <Grid Background="#5c0095">
                    <!-- Favorites window to be added later -->
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
